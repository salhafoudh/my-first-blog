<div class="flex justify-between">
      <% if user_signed_in? %>
      <div class="mr-3">
            <%= link_to "Home", root_path, class:"no-underline bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold" %>
            <%= link_to "Create new post", new_path, class:"no-underline bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold" %>
       </div> 
       <div>   
            <%= link_to "Profile", edit_user_registration_path, class:"no-underline bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold" %>     
         
